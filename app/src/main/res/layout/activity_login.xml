<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login"
    >
    <com.facebook.login.widget.LoginButton
        android:id="@+id/btnLoginfacebook"
        android:visibility="invisible"
        android:enabled="false"
        android:layout_width="290dp"
        android:layout_height="45dp"
        android:layout_marginTop="190dp"
        android:background="@drawable/btn_fb"
        android:scaleType="fitXY"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        >

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnLoginfb"
            android:layout_width="290dp"
            android:layout_height="45dp"
            android:layout_marginTop="190dp"
            android:background="@drawable/btn_fb"
            android:scaleType="fitXY"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnLoginGmail"
            android:layout_width="290dp"
            android:layout_height="45dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/btn_gmail"
            android:scaleType="fitXY"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_playnow"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:clickable="true"
            android:scaleType="fitXY"
            android:layout_marginTop="20dp"
            android:background="@drawable/playnow" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</RelativeLayout>
